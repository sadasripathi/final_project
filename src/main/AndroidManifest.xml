<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sada.medicineremainder">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name="com.sada.medicineremainder.medicine.MedicineActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- <activity android:name=".MainActivity" /> -->
        <activity android:name="com.sada.medicineremainder.addmedicine.AddMedicineActivity" />
        <activity android:name="com.sada.medicineremainder.alarm.ReminderActivity" />
        <activity android:name="com.sada.medicineremainder.report.MonthlyReportActivity"/>
    </application>

</manifest>